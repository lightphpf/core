#!/usr/bin/env php
<?php

$projectVendor = __DIR__ . '/../../../autoload.php';

if (!file_exists($projectVendor)) {
    fwrite(STDERR, "Autoloader not found at $projectVendor\n");
    exit(1);
}

require $projectVendor;

use LightPHPF\Core\Console\ConsoleApplication;

/**
 * @details Run the console application
 */
(new ConsoleApplication())->run();
